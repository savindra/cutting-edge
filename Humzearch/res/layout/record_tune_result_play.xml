<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtRecordTuneResultTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/timerstart"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <SeekBar
        android:id="@+id/recordTuneResultSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtRecordTuneResultTimer" />

    <Button
        android:id="@+id/btnRecordTuneResultStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/recordTuneResultSeekBar"
        android:layout_toRightOf="@+id/txtRecordTuneResultTimer"
        android:background="@drawable/stop_button" />

    <Button
        android:id="@+id/btnRecordTuneResultPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/recordTuneResultSeekBar"
        android:layout_toLeftOf="@+id/txtRecordTuneResultTimer"
        android:background="@drawable/play_button"
        android:onClick="play" />

</RelativeLayout>